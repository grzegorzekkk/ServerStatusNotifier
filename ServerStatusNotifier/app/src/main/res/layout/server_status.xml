<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/plank_background"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp">

    <TextView
        android:id="@+id/serverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/minecraft"
        android:shadowColor="#000000"
        android:shadowDx="1.8"
        android:shadowDy="1.5"
        android:shadowRadius="1.6"
        android:text="Test serwer"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/serverInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/deleteServerButton"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_dialog_info" />

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="38dp"
        android:layout_height="34dp"
        android:layout_below="@+id/serverName"
        android:layout_alignStart="@+id/serverName"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/redstone_block" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/itemImage"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/itemImage"
        android:fontFamily="@font/minecraft"
        android:shadowColor="#000000"
        android:shadowDx="1.8"
        android:shadowDy="1.5"
        android:shadowRadius="1.6"
        android:text="Online"
        android:textColor="@android:color/white"
        android:textAlignment="viewStart"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/deleteServerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_delete" />

</RelativeLayout>